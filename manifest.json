{
  "manifest_version": 2,

  "name": "PGP-surf",
  "description": "Brings the security of PGP to any interaction",
  "version": "0.0",
  "icons":{"128":"res/lock.png"},

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content_scripts/content_css.css"],
      "js": ["lib/jquery.min.js", "lib/jquery.highlight.js", "lib/aes.js", "content_scripts/update_catcher.js", "content_scripts/content_script.js"]
    }
  ],
  
  "browser_action": {
    "default_icon": "res/lock.png",
    "default_popup": "popup.html"
  }
}

